<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".database.DatabaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_data_layout"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/db_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="New First Name" />

        <EditText
        android:id="@+id/db_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="New Last Name" />

    <Button
        android:id="@+id/write_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write data" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/update_data_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/write_data_layout">
        <EditText
            android:id="@+id/db_old_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Old First Name" />

        <EditText
            android:id="@+id/db_old_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Old Last Name" />
        <Button
            android:id="@+id/update_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update data"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_data_layout">
        <Button
            android:id="@+id/read_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read data"/>

        <Button
            android:id="@+id/sync_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync data"/>
    </LinearLayout>
</RelativeLayout>